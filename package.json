{
  "name": "@betterthings/scissors",
  "version": "0.0.0",
  "description": "handy image cropper with focus point editor",
  "main": "lib/index.js",
  "browser": "dist/scissors.js",
  "scripts": {
    "build": "npm run build:lib && npm run build:umd",
    "build:lib": "tsc --outDir lib --module commonjs",
    "build:es": "tsc --outDir es --module es2015",
    "build:umd": "npm run build:es && rollup --config",
    "build:demo": "tsc -p demo",
    "prebuild": "npm run clean",
    "clean": "rimraf lib es dist",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "author": {
    "name": "BTD - Better Things Digital GmbH",
    "email": "hi@betterthings.digital",
    "url": "https://betterthings.digital"
  },
  "contributors": [
    {
      "name": "Florian HÃ¤mmerle",
      "email": "florian@betterthings.digital"
    },
    {
      "name": "Patrick Schedler",
      "email": "patrick@betterthings.digital"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/betterthingsdigital/scissors.git"
  },
  "bugs": {
    "url": "https://github.com/betterthingsdigital/scissors/issues"
  },
  "keywords": [
    "image",
    "cropper",
    "cropping",
    "focus",
    "scissors",
    "react-component",
    "react"
  ],
  "files": [
    "lib"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "rootDir": "src",
    "testRegex": "test.tsx?$"
  },
  "devDependencies": {
    "@types/jest": "23.0.0",
    "@types/react": "16.3.17",
    "@types/react-dom": "16.0.6",
    "@types/react-image-crop": "3.0.0",
    "husky": "0.14.3",
    "immutable": "3.8.2",
    "jest": "23.1.0",
    "lint-staged": "7.1.3",
    "prettier": "1.13.4",
    "react": "16.4.0",
    "react-dom": "16.4.0",
    "rimraf": "2.6.2",
    "rollup": "0.60.1",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-uglify": "4.0.0",
    "serve": "8.1.1",
    "ts-jest": "22.4.6",
    "typescript": "2.9.1"
  },
  "dependencies": {
    "react-image-crop": "4.0.1"
  }
}
